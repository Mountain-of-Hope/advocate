packages: 
  yum: 
    amazon-linux-extras: []

commands:
  01_postgres_activate: 
    command: sudo amazon-linux-extras enable postgresql10
  02_postgres_install: 
    command: sudo yum install -y postgresql-devel
  03_create_superuser_for_django_admin:
    command: "python manage.py mysuperuser"
    leader_only: true